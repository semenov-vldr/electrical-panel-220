mixin randerCards(dataList)
  each card in dataList
      a.card(href=card.link data-id=card.id data-phases=card.phases data-modules=card.modules data-price=card.price)
          .card__img
              img(src= card.imgSrc)
          .card__data
              h3.card__caption= card.caption
              span.card__price= `${Intl.NumberFormat('ru-RU').format(card.price)} ₽`
              ul.card__params
                  li.card__params-item
                      span Количество фаз
                      span= card.phases
                  li.card__params-item
                      span Количество модулей
                      span= card.modules


mixin productSlider(name, directory)
    .product-page__slider.scheme(data-company=name hidden)
        .swiper-top
            .swiper-wrapper
                img.swiper-slide(src=`./assets/img/products/${directory}/${name}.png`)
                img.swiper-slide(src=`./assets/img/products/24m1p/03.jpg`)
            .swiper-pagination
        .swiper-thumbs
            .swiper-wrapper
                img.swiper-slide(src=`./assets/img/products/${directory}/${name}.png`)
                img.swiper-slide(src=`./assets/img/products/24m1p/03.jpg`)

