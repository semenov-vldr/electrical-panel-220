-
    const folder = "15-36м3р";

section.product-page

    .product-page__container.container.v-line
        +productPageBack
        h1.product-page__title.ff-decor Электрощит трехфазный&nbsp;36&nbsp;модулей

        // ------ Slider ------
        // dekraft
        .product-page__slider(data-company="dekraft")
            .swiper-top
                .swiper-wrapper
                    img.swiper-slide(src=`./assets/img/products/${folder}/01.jpg`)
                    img.swiper-slide(src=`./assets/img/products/${folder}/02.jpg`)
                    img.swiper-slide(src=`./assets/img/products/${folder}/03.jpg`)
                    img.swiper-slide(src=`./assets/img/products/${folder}/04.jpg`)
                    img.swiper-slide(src=`./assets/img/products/${folder}/05.jpg`)
                    img.swiper-slide(src=`./assets/img/products/${folder}/06.jpg`)
                .swiper-pagination

            .swiper-thumbs
                .swiper-wrapper
                    img.swiper-slide(src=`./assets/img/products/${folder}/01.jpg`)
                    img.swiper-slide(src=`./assets/img/products/${folder}/02.jpg`)
                    img.swiper-slide(src=`./assets/img/products/${folder}/03.jpg`)
                    img.swiper-slide(src=`./assets/img/products/${folder}/04.jpg`)
                    img.swiper-slide(src=`./assets/img/products/${folder}/05.jpg`)
                    img.swiper-slide(src=`./assets/img/products/${folder}/06.jpg`)


        // abb
        .product-page__slider.scheme(data-company="abb" hidden)
            .swiper-top
                .swiper-wrapper
                    img.swiper-slide(src=`./assets/img/products/${folder}/abb.png`)
                .swiper-pagination
            .swiper-thumbs
                .swiper-wrapper
                    img.swiper-slide(src=`./assets/img/products/${folder}/abb.png`)

        // chint
        .product-page__slider.scheme(data-company="chint" hidden)
            .swiper-top
                .swiper-wrapper
                    img.swiper-slide(src=`./assets/img/products/${folder}/chint.png`)
                .swiper-pagination
            .swiper-thumbs
                .swiper-wrapper
                    img.swiper-slide(src=`./assets/img/products/${folder}/chint.png`)


        // iek
        .product-page__slider.scheme(data-company="iek" hidden)
            .swiper-top
                .swiper-wrapper
                    img.swiper-slide(src=`./assets/img/products/${folder}/iek.png`)
                .swiper-pagination
            .swiper-thumbs
                .swiper-wrapper
                    img.swiper-slide(src=`./assets/img/products/${folder}/iek.png`)


        // keaz
        .product-page__slider.scheme(data-company="keaz" hidden)
            .swiper-top
                .swiper-wrapper
                    img.swiper-slide(src=`./assets/img/products/${folder}/keaz.png`)
                .swiper-pagination
            .swiper-thumbs
                .swiper-wrapper
                    img.swiper-slide(src=`./assets/img/products/${folder}/keaz.png`)

        // ------ Slider END ------

        - const modif = "36m3p";
        +productPageBuy(objPrices[modif].dekraft)
        .product-page__modifications
            //--- Производитель комплектующих ---
            +productPageCompanies(objPrices[modif].dekraft, objPrices[modif].abb, objPrices[modif].chint, objPrices[modif].iek, objPrices[modif].keaz)
            // --- Корпус ---
            +productPageCase
            // Открывание
            +productPageLoop

        .product-page__data
        .product-page__data
            +productPageDataTitles

            .product-page__params
                dl.product-page__params-item
                    dt Степень защиты
                    dd IP 40
                dl.product-page__params-item
                    dt Количество модулей
                    dd 36
                dl.product-page__params-item
                    dt Количество рядов
                    dd 3
                dl.product-page__params-item
                    dt Ширина, мм
                    dd 300
                dl.product-page__params-item
                    dt Высота, мм
                    dd 560
                dl.product-page__params-item
                    dt Глубина, мм
                    dd 155


            .product-page__desc
                p Расширенная модель трехфазного навесного щита в сборе. Адаптирован под типовой загородный дом с выделенной мощностью до 15кВт, максимальная универсальность за счет увеличенной линейки автоматов, 3 группы защищены от утечки и короткого замыкания диф.автоматами, 15 групп на розетки и 6 групп освещения защищены общим УЗО. Автоматика будет выполнена на выбранной компонентной базе ("Комплектующие"), соблюдена селективность электрической схемы.
                p Максимально функциональный щит для Вашего удобства. Все соединения промаркированы, приложенная электрическая схема и инструкция по установке помогут выполнить работу по монтажу щита самостоятельно даже без специальных навыков.
                p В щите предусмотрено подключение варочной панели отдельной защищенной группой повышенной мощности.